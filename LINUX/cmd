# sudo root user
sudo su -
exit

#current directory
pwd
ls


#create new directory
mkdir "dirname"

sudo usermod -a -G docker $USER

#get content of file
cat /usr/src/filename.txt

# unhide files from terminal
ls -ld .?*

# remove directory
sudo rm -R file_name

# list size owner ect of the files
ls -ln
ls -l

# owner and file access rights

chown -R username path/to/the/file
# 777 owner group world
chmod 777 file_name

# Network
ping www.test.com

### wyszukanie pliku folderu po nazwie
find / -xdev 2>/dev/null -name "exampledocs" 


